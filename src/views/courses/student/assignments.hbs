<!-- Page Wrapper -->
<div id="wrapper" class="wrapper">

    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {{> topbar}}

            <!-- Begin Page Content -->
            <div class="container-fluid">

                 <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Assigned Evaluations</h1>
                </div>

                <!-- Content Row -->
                <div class="row">

                    {{#each assignment}}
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="h5 mb-0 text-gray-800">{{name}}</div>   
                                </div>
                                <div class="form-group">
                                    <a href="/students/evaluation/{{name}}" class="card-link">Start evaluation &rarr;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
                    
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        {{> footer}}

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->