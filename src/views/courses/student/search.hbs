<!-- Page Wrapper -->
<div id="wrapper" class="wrapper">

    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {{> topbar}}

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                {{#unless results}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h3 class="h3 mb-0 text-gray-800">Search courses</h3>
                    </div>
                {{/unless}}

                <!-- Topbar Search -->
                <form class="navbar-search" action="/students/search-course/{{user.username}}">
                    <div class="input-group">
                        <input type="text" class="form-control border-0 small" placeholder="Tearcher username" name="teacher"
                            value={{teacher}}>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search fa-sm"></i></button>
                    </div>
                </form>

                {{#if results}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h3 class="h5 mb-0 text-gray-800">Results</h3>
                    </div>
                {{/if}}

                <!-- Content Row -->
                {{#each results}}
                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-12 mb-4 card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <img src="/img/{{photo}}" class="rounded-circle mx-auto d-block m-4 avatar"/>
                                    </div>
                                    <div class="col-xl-6 col-md-6 mb-4">
                                        <div class="form-group">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{code}}</div>
                                            <div class="h5 mb-0 text-gray-800">{{name}}</div>
                                            <hr>
                                            <p class="description">{{description}}</p>
                                            <div class="h6 mb-0 text-gray-800">Starts: {{startdate}}</div>
                                            {{#if enddate}}
                                                <div class="h6 mb-0 text-gray-800">Ends: {{enddate}}</div>
                                            {{/if}}
                                        </div>   
                                    </div>
                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <a class="btn btn-primary btn-user btn-block register" href="/students/register/{{../user.username}}/{{../user.name}}/{{code}}/{{name}}">Register</a>
                                    </div>
                                </div>    
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        {{> footer}}

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->