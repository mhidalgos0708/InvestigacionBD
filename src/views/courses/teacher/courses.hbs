<!-- Page Wrapper -->
<div id="wrapper" class="wrapper">

    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {{> topbar}}

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <div class="row">
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="h5 mb-0 text-gray-800">New course</div>
                                </div>
                                <div class="form-group">
                                    <a href="/teachers/newcourse" class="card-link">Create course</a>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Page Heading -->
                {{#if privatecourse}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Private courses</h1>
                    </div>
                {{/if}}

                <!-- Content Row -->
                <div class="row">
                    {{#each privatecourse}}
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="form-group">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{code}}</div>
                                        <div class="h5 mb-0 text-gray-800">{{name}}</div>
                                    </div>
                                    <div class="form-group">
                                        <a href="/teachers/course/{{../user.username}}/{{code}}" class="card-link">Visit course</a>
                                    </div>
                                    <div class="form-group">
                                        <a href="/teachers/publish-course/{{../user.username}}/{{code}}" class="card-link">Publish course</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <!-- Page Heading -->
                {{#if activecourse}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Active courses</h1>
                    </div>
                {{/if}}

                <!-- Content Row -->
                <div class="row">
                    {{#each activecourse}}
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="form-group">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{code}}</div>
                                        <div class="h5 mb-0 text-gray-800">{{name}}</div> 
                                    </div>
                                    <div class="form-group">
                                        <a href="/teachers/course/{{../user.username}}/{{code}}" class="card-link">Visit course</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <!-- Page Heading -->
                {{#if finishedcourse}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Finished courses</h1>
                    </div>
                {{/if}}

                <!-- Content Row -->
                <div class="row">
                    {{#each finishedcourse}}
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="form-group">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{code}}</div>
                                        <div class="h5 mb-0 text-gray-800">{{name}}</div> 
                                    </div>
                                    <div class="form-group">
                                        <a href="/teachers/course/{{../user.username}}/{{code}}" class="card-link">Visit course</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        {{> footer}}

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->