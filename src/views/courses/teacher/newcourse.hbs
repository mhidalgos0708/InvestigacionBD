    <!-- Page Wrapper -->
    <div id="wrapper">

        {{> sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {{> topbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-1 text-gray-800 create-evaluation">Create course</h1>
                    
                    <form class="user" action="/teachers/save-course/{{user.username}}" method="POST">
                        <div class="col-md-6 mx-auto">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="file" class="imagepicker" id="control-avatar" onchange="getImage(this.value);" 
                                        accept="image/jpg, image/jpeg, image/png" name="photo">
                                    <img id="display-image" class="rounded-circle mx-auto d-block m-4 avatar" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-control-user">Select a photo</label>
                                    <label for="control-avatar" class="form-control-user"><i class="fas fa-plus-circle"></i></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" name="code" placeholder="Code"
                                value={{code}}>
                            </div>      
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" name="name" placeholder="Name"
                                value={{name}}>
                            </div>
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group">
                                <textarea class="form-control form-control-user" name="description" placeholder="Description">{{description}}</textarea>
                            </div>
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group row">
                                <div class="col-sm-3 mb-3 mb-sm-0">
                                    <label class="form-control-user">Start date</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control form-control-user" id="datepicker"
                                        name="startdatepicker" min="1950-01-01" max="2021-12-31">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group row">
                                <div class="col-sm-3 mb-3 mb-sm-0">
                                    <label class="form-control-user">End date</label>
                                </div>
                                <div class="col-sm-8">
                                    <input type="date" class="form-control form-control-user" id="second-datepicker"
                                        name="enddatepicker" min="1950-01-01" max="2021-12-31" disabled>
                                </div>
                                <div class="col-sm-1">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" onclick="enableDatepicker()" id="optional-enddate">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mx-auto">
                            <div class="form-group row">
                                <button type="submit" class="btn btn-primary btn-user btn-block">Save course</button>
                            </div>
                        </div>
                    </form>
                        
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            {{> footer}}

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->