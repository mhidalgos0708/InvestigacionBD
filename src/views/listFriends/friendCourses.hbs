<!-- Page Wrapper -->
<div id="wrapper" class="wrapper">

    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {{> topbar}}

            <!-- Begin Page Content -->
            <div class="container-fluid">

                 {{#if teacherCourses}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h3 class="h5 mb-0 text-gray-800">As a teacher</h3>
                    </div>
                {{/if}}

                <!-- Content Row -->
                {{#each teacherCourses}}
                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-12 mb-4 card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <img src="/img/{{photo}}" class="rounded-circle mx-auto d-block m-4 avatar"/>
                                    </div>
                                    <div class="col-xl-6 col-md-6 mb-4">
                                        <div class="form-group">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{code}}</div>
                                            <div class="h5 mb-0 text-gray-800">{{name}}</div>
                                            <hr>
                                            <p class="description">{{description}}</p>
                                            <div class="h6 mb-0 text-gray-800">{{startdate}}</div>
                                        </div>
                                    </div>
                                </div>    
                            </div>
                        </div>
                    </div>
                {{/each}}

                 {{#if studentCourses}}
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h3 class="h5 mb-0 text-gray-800">As a student</h3>
                    </div>
                {{/if}}

                <!-- Content Row -->
                {{#each studentCourses}}
                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-12 mb-4 card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-6 col-md-6 mb-4">
                                        <div class="form-group">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">{{course}}</div>
                                            <div class="h5 mb-0 text-gray-800">{{course_name}}</div>
                                            <hr>
                                        </div>
                                    </div>
                                </div>    
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        {{> footer}}

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->