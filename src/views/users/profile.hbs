<!-- Page Wrapper -->
<div id="wrapper" class="wrapper">

    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {{> topbar}}

            <div class="container-fluid">
                <div class="col-md-6 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="text-gray-900 card-title d-flex justify-content-between align-items-center">
                                Profile <a href="/users/edit/{{user._id}}"><i class="fas fa-edit"></i></a>
                            </h4>
                            <div class="mt-3">
                                <img src="/img/{{user.avatar}}" class="rounded-circle mx-auto d-block m-4 avatar"/>
                            </div>
                            <div class="mt-3">
                                <label class="form-control-user">Full name : {{user.name}}</label>
                            </div>
                            <div class="mt-3">
                                <label class="form-control-user">Date of birth : {{user.dateofbirth}}</label>
                            </div>
                            <div class="mt-3">
                                <label class="form-control-user">Username : {{user.username}}</label>
                            </div>
                            <div class="mt-3">
                                <label class="form-control-user">Encrypted password*</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- End of Main Content -->

        {{> footer}}

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>